<%= render 'layouts/navbar' %>

<!-- Main Profile Container -->
<div class="mainProfile">
  <div class="container">
    <br>
    <div class="row">
      <div class="col-xs-12">
        <h1 class="headline text-center">Welcome to Base Camp</h1>
      </div>
    </div>

    <!-- Profile Info -->
    <div class="row text-left">
      <div class="col-xs-3">
      </div>
      <div class="col-xs-2">
        <%= image_tag avatar, :class => "roundedCorners" %>
      </div>
      <div class="col-xs-5">
        <h1><%= @user.name %></h1>
        <h4>Joined on <%= @user.created_at %></h4>
        <h4 class="fa fa-heart fa-1x" href="#"> Check out Fitbit.com</h4>
      </div>
      <div class="col-xs-1">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12"><br><br></div>
    </div>
    </div>
  </div>
</div><!-- Close Container -->

<!-- Section 2 Container -->
  <!-- Distance section -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <img class="fa fa-bolt fa-5x" />
      <h1 class="fa fa-bolt fa-5x sectionTitle"><strong> <%= distance %></strong></h1>
      <h1 class="sectionHeadline text-center"> All time miles!</h1>
      <hr>
    </div>
  </div>

  <!-- Climb total -->
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1 class="fa fa-flag fa-5x sectionTitle"><strong> <%= climb %></strong></h1>
      <h1 class="sectionHeadline text-center"> Total feet climbed!</h1>
      <hr>
    </div>
  </div>
</div><!-- Close Container -->


<%= render 'layouts/footerstatic' %>

