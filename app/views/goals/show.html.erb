<%= render 'layouts/navbar' %>

<div class="container">

  <!-- Goal Information from Wolfram -->
  <div class="row">
    <div class="col-xs-12 text-center">
        <h1 class="headline">Climbing <%= @goal.name%></h1>
        <h3>Distance: <%= @goal.distance%> miles</h3></br>
    </div>
  </div>

  <!-- Goal Navbar -->
  <div class="row">
    <div class="col-xs-1 text-center">
    </div>
    <div class="col-xs-10 text-center">
      <%= render 'goalnavbar' %>
    </div>
    <div class="col-xs-1 text-center">
    </div>
  </div>

    <!-- Morris Graph -->
  <div class="row">
    <div class="col-xs-1 text-center">
    </div>
    <div class="col-xs-10 text-center">
      <div id="area-example"  style="height: 500px; width: 100%;"></div>
    </div>
    <div class="col-xs-1 text-center">
    </div>
  </div>
</div><!-- Close Container -->

<%= render 'layouts/footer' %>


<!-- Morris Graph Script -->
<script>

  // Area Chart
  Morris.Area({
    element: 'area-example',
    data: [
      { y: '2006', a: 0, b: 0 },
      { y: '2007', a: 10,  b: 65 },
      { y: '2008', a: 20,  b: 40 },
      { y: '2009', a: 30,  b: 65 },
      { y: '2010', a: 40,  b: 40 },
      { y: '2011', a: 50,  b: 65 },
      { y: '2012', a: 1000, b: 90 }
    ],
    xkey: 'y',
    ykeys: ['a', 'b'],
    labels: ['Series A', 'Series B']
  });

</script>
